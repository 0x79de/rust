<li>
<details>
<summary>{{ name }} ({{ test_count() }} test{{ test_count() | pluralize }})</summary>

{% if !groups.is_empty() %}
<ul>
    {% for (dir_name, subgroup) in groups %}
    {{ subgroup|safe }}
    {% endfor %}
</ul>
{% endif %}

{% if !root_tests.is_empty() %}
<ul>
    {% for test in root_tests %}
    <li><b>{{ test.name }}</b> ({{ test.passed.len() }} passed, {{ test.ignored.len() }} ignored)</li>
    {% endfor %}
</ul>
{% endif %}

</details>
</li>
